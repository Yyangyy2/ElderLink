<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <!-- Top Blue Bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="#2962FF"
            android:gravity="top"
            android:padding="10dp">

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:textSize="12sp"
                android:background="@drawable/circle_button"
                android:textColor="#FFFFFF"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- Profile Section -->
        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="387dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/white"
            android:radius="160000dp"
            android:width="1dp"
            android:color="#DDDDDD"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/personImage"
                android:layout_width="77dp"
                android:layout_height="71dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_placeholder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/personName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Person Name"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info >"
                    android:textColor="#2962FF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Features Section -->
        <TextView
            android:id="@+id/featuresLabel"
            android:layout_below="@id/profileSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Features"
            android:textSize="16sp"
            android:textStyle="bold"/>



        <GridLayout
            android:id="@+id/featuresGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/featuresLabel"
            android:layout_marginTop="14dp"
            android:columnCount="3"
            android:rowCount="2"
            android:padding="8dp">

            <!-- Feature Buttons -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_border"
                >

                <ImageButton
                    android:id="@+id/btnMedication"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/view_medication_logo"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:contentDescription="Medication" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Medication"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAppointment"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_border"
                >

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/view_doctor_appointment"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:contentDescription="Doctor Appointment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Doctorâ€™s Appointment"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnHealth"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/custom_border"
                >

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/view_health_symptoms"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:contentDescription="Health Symptoms" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log/View Health Symptoms"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </GridLayout>

        <!-- Notifications Section -->
        <TextView
            android:id="@+id/notificationsLabel"
            android:layout_below="@id/featuresGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="People caring for you"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/viewMore"
            android:layout_alignBaseline="@id/notificationsLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="View More >"
            android:textColor="#2962FF"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/caregiverRecyclerView"
            android:layout_width="403dp"
            android:layout_height="323dp"
            android:layout_above="@id/bottomNavigation"
            android:layout_below="@id/notificationsLabel"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottomNavigation"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@android:color/white"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/nav_home"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/navNotifications"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/nav_notification"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/navMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/nav_menu"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/left_side_menu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"/> <!-- Include the left side menu within this page -->
</androidx.drawerlayout.widget.DrawerLayout>