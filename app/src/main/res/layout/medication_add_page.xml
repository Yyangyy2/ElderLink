<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Medication Name -->
        <EditText
            android:id="@+id/editMedicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Medication Name"
            android:inputType="textCapWords"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Medication Image -->
        <ImageView
            android:id="@+id/selectedMedicationImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/view_medication_logo" />

        <Button
            android:id="@+id/selectMedicationImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <!-- Date Picker -->
        <EditText
            android:id="@+id/editMedicationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar" />

        <!-- Time Picker -->
        <EditText
            android:id="@+id/editMedicationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Time"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:drawableEnd="@android:drawable/ic_menu_recent_history" />

        <!-- Dosage Unit -->
        <Spinner
            android:id="@+id/spinnerMedicationUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveMedicationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Medication"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
