<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Medication Image -->
        <ImageView
            android:id="@+id/selectedMedicationImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/view_medication_logo"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:id="@+id/selectMedicationImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <!-- Brand Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/editBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Panadol, Ventolin"
            android:inputType="textCapWords"
            android:padding="12dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Medication Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/editMedName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Paracetamol, Salbutamol"
            android:inputType="textCapWords"
            android:padding="12dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Times Per Day -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Times Per Day"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/editTimesPerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 2 times daily, After meals"
            android:inputType="text"
            android:padding="12dp"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveMedicationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Medication"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:backgroundTint="#0066FF"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!-- Delete Button (Only visible in edit mode) -->
        <Button
            android:id="@+id/deleteMedicationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Medication"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />

    </LinearLayout>
</ScrollView>